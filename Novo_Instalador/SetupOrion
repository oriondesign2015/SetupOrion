echo ""

echo -e "\e[97mPasso$amarelo 3/4\e[0m"
echo -en "\e[33mDigite um nome de usuario para o Nocobase (ex: admin): \e[0m" && read -r user_nocobase
echo ""

echo -e "\e[97mPasso$amarelo 4/4\e[0m"
