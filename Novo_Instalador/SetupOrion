conferindo_as_info

echo -e "\e[33mDominio do Baserow:\e[97m $url_baserow\e[0m"
echo ""

read -p "As respostas estão corretas? (Y/N): " confirmacao
if [ "$confirmacao" = "Y" ] || [ "$confirmacao" = "y" ]; then
    clear
    instalando_msg
    break
else
    clear
    nome_baserow
    preencha_as_info
fi
done

