preencha_as_info

while true; do

echo -e "\e[97mPasso$amarelo 1/2\e[0m"
echo -en "\e[33mDigite o nome de usuario: \e[0m" && read -r user_mongo
echo ""

echo -e "\e[97mPasso$amarelo 2/2\e[0m"
echo -en "\e[33mDigite a senha do usuario: \e[0m" && read -r pass_mongo
echo ""

clear
nome_mongodb
conferindo_as_info

echo -e "\e[33mUsuario:\e[97m $user_mongo\e[0m"
echo ""

echo -e "\e[33mSenha:\e[97m $pass_mongo\e[0m"
echo ""

read -p "As respostas estão corretas? (Y/N): " confirmacao
if [ "$confirmacao" = "Y" ] || [ "$confirmacao" = "y" ]; then
    clear
    instalando_msg
    break
else
    clear
    nome_mongodb  
    preencha_as_info
fi
done

#MENSAGEM DE INICIANDO (PASSOS)
