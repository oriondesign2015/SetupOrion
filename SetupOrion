echo ""

echo -e "\e[33mUsuario:\e[97m $user_moodle\e[0m"
echo ""

echo -e "\e[33mSenha:\e[97m $pass_moodle\e[0m"
echo ""

echo -e "\e[97mObservação:\e[33m Esta é uma ferramenta que pode demorar para iniciar na primeira vez\e[0m"
